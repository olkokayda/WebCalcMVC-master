@model WebCalcMVC.Models.UserInput

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Calculator</title>
    <style type="text/css">
        table {
            border: 1px solid black;
            margin: auto;
            width: 200px;
            height: 350px;
        }
        input {
            width: 100%;
            height: 100%;
        }
        td {
            height: 50px;
            font-size: x-large;
        }
        .first {
            height: 50px;
            text-align: right;
        }
        #CurrentInput {
            height: 50px;
            font-size: x-large;
            text-align: right;
        }
    </style>
    <script>
        function addTextToInput(i)
        {
            var text = document.getElementById("CurrentInput").value;
            document.getElementById("CurrentInput").value = text + i;
        }
    </script>
</head>
<body>
    <div> 
        @using (Html.BeginForm()) {
        <table>
            <tr>
                <td id="dispay1" colspan="4"><div class="first">@Model.History</div></td>
            </tr>
            <tr>
                <td id="dispay2" colspan="4"><input type="text" id="CurrentInput" name="CurrentInput" ></td>
            </tr>
            <tr>
                <td><input type="button" value="1" onclick="addTextToInput('1')"></td>
                <td><input type="button" value="2" onclick="addTextToInput('2')"></td>
                <td><input type="button" value="3" onclick="addTextToInput('3')"></td>
                <td><input type="submit" value="+" name="submitButton"></td>        
            <tr>
            <tr>
                <td><input type="button" value="4" onclick="addTextToInput(4)"></td>
                <td><input type="button" value="5" onclick="addTextToInput(5)"></td>
                <td><input type="button" value="6" onclick="addTextToInput(6)"></td>
                <td><input type="submit" value="-" name="submitButton"></td>
            <tr>
            <tr>
                <td><input type="button" value="7" onclick="addTextToInput(7)"></td>
                <td><input type="button" value="8" onclick="addTextToInput(8)"></td>
                <td><input type="button" value="9" onclick="addTextToInput(9)"></td>
                <td><input type="submit" value="*" name="submitButton"></td>
            <tr>
            <tr>
                <td><input type="button" value="." onclick="addTextToInput('.')"></td>
                <td><input type="button" value="0" onclick="addTextToInput(0)"></td>
                <td><input type="submit" value="C" name="submitButton"></td>
                <td><input type="submit" value="/" name="submitButton"></td>
            <tr>
                <td colspan="4"><input type="submit" value="=" name="submitButton"></td>
            </tr>
        </table>
        }
    </div>
</body>
</html>

